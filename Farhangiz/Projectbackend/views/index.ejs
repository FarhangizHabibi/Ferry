<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog</title>
    <link rel="stylesheet" href="/css/style.css" />
    <script src="/js/script.js"></script>
  </head>
  <body>
    <%- include("partials/header.ejs") %>

    <h1 class="title-post">Welocme to the Hsitorical Website of Herat</h1>

  
    <!-- <a class="link" href="/newpost">Create New Post</a> -->
    <ul >
      <% posts.forEach(post => { %>
      <li class="container">
        <h2 ><%= post.title %></h2>
        <p class="desc-post"><%= post.description %></p>
        <img
        src="<%= post.imageUrl %>"
        alt="<%= post.title %>"
        style="max-width: 3oopx"
          class="img-center"
        />
        <form action="/delete/<%= post.id %>" method="POST" enctype="multipart/form-data">
          <div class="blog-input">
          <button  type="submit" id="deleteBtn"
           class="button2" >Delete</button>
          <a  class="link" href="/edit/<%= post.id %>" >Edit</a>
        </div>
      
        </form>
      </li>
      <% }) %>
    </ul>
   
</div> 
    <%- include("partials/footer.ejs") %>

 
  </body>
</html>
